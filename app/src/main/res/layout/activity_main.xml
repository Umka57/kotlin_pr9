<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/input_form"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:visibility="visible"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить оператора"
            android:textSize="21sp"
            android:gravity="center"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/input_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="name"/>
        <EditText
            android:id="@+id/input_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="type"/>

        <EditText
            android:id="@+id/input_area"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="area"
            android:inputType="number" />

        <EditText
            android:id="@+id/input_subPrice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="subPrice"
            android:inputType="number"/>

        <LinearLayout
            android:id="@+id/inputform_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">
            <Button
                android:id="@+id/button_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/button_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_operators"
        android:padding="4dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttons"
        android:layout_below="@+id/input_form"
        tools:listitem="@layout/operator_card"/>
    <LinearLayout
        android:id="@+id/buttons"
        android:padding="4dp"
        android:clipToPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/addBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Insert Item"
            android:layout_weight="1"
            android:onClick="insertItem"/>

        <Button
            android:id="@+id/deleteBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Item"
            android:layout_weight="1"
            android:onClick="deleteItem"/>

    </LinearLayout>
</RelativeLayout>